#!/usr/bin/env bash
set -euo pipefail

http POST http://localhost:3000/api/users \
    email=user2137@gmail.com \
    password=Tiger123

access_token=$(http POST http://localhost:3000/api/auth/login \
	email=user2137@gmail.com \
	password=Tiger123 | jq -r '.accessToken')

# Create categories

http POST http://localhost:3000/api/categories \
	Authorization:"Bearer $access_token" \
	title="Journals"

http POST http://localhost:3000/api/categories \
	Authorization:"Bearer $access_token" \
	title="Shopping"

http POST http://localhost:3000/api/categories \
	Authorization:"Bearer $access_token" \
	title="Ideas"

http POST http://localhost:3000/api/categories \
	Authorization:"Bearer $access_token" \
	title="Stupid & Crazy"

http POST http://localhost:3000/api/categories \
	Authorization:"Bearer $access_token" \
	title="Cooking"

http POST http://localhost:3000/api/categories \
	Authorization:"Bearer $access_token" \
	title="Experiments"

http POST http://localhost:3000/api/categories \
	Authorization:"Bearer $access_token" \
	title="Fitness"

http POST http://localhost:3000/api/categories \
	Authorization:"Bearer $access_token" \
	title="Dreams"

# Create notes

http POST http://localhost:3000/api/notes \
	Authorization:"Bearer $access_token" \
	title="Journal Entry 1" \
	content="Today was an amazing day!" \
	categoryIds:='[1]'

http POST http://localhost:3000/api/notes \
	Authorization:"Bearer $access_token" \
	title="Shopping List" \
	content="Milk, Eggs, Bread, Vegetables" \
	categoryIds:='[2]'

http POST http://localhost:3000/api/notes \
	Authorization:"Bearer $access_token" \
	title="Idea for Project" \
	content="Create a new app that helps with productivity. Blah Blah Blah this was all generated by ChatGPT." \
	categoryIds:='[3]'

http POST http://localhost:3000/api/notes \
	Authorization:"Bearer $access_token" \
	title="Journal Entry 2" \
	content="Spent some quality time with friends." \
	categoryIds:='[1]'

http POST http://localhost:3000/api/notes \
	Authorization:"Bearer $access_token" \
	title="Shopping for the Weekend" \
	content="Chicken, Pasta, Sauce, Snacks" \
	categoryIds:='[2]'

http POST http://localhost:3000/api/notes \
	Authorization:"Bearer $access_token" \
	title="Innovative Idea" \
	content="Develop a sustainable energy solution. No more coal mines, hell yeah." \
	categoryIds:='[3]'

http POST http://localhost:3000/api/notes \
	Authorization:"Bearer $access_token" \
	title="What if...?" \
	content="If a cow had wings then it could fly. Whoaah, it'd be awesome! Realllly!" \
	categoryIds:='[3,4]'

http POST http://localhost:3000/api/notes \
	Authorization:"Bearer $access_token" \
	title="Recipe Experiment" \
	content="Tried a new recipe today. It turned out surprisingly delicious!" \
	categoryIds:='[5,6]'

http POST http://localhost:3000/api/notes \
	Authorization:"Bearer $access_token" \
	title="Gym Progress" \
	content="Hit a new personal record at the gym. Feeling strong and accomplished!" \
	categoryIds:='[7]'

http POST http://localhost:3000/api/notes \
	Authorization:"Bearer $access_token" \
	title="Dream Diary" \
	content="Had a vivid dream last night about flying on a magical carpet. So surreal!" \
	categoryIds:='[8]'
